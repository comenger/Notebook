@model Folder

@inject IViewLocalizer Localizer

<div id="modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <form action="@(Model != null ? "/editFolder" : "/addFolder")" method="post">
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@(Model != null ? Localizer["Edit Folder"] : Localizer["Add Folder"])</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.HiddenFor(a => a.ID)
                        <input type="text" class="form-control" name="Name" required value="@(Model != null ? Model.Name : "")" placeholder="@Localizer["Name"]" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Explanation" value="@(Model != null ? Model.Explanation : "")" placeholder="@Localizer["Explanation"]" />
                    </div>
                    <div class="form-group">
                        <label>@Localizer["Visibility"]</label>
                        @foreach (var item in Enum.GetValues(typeof(Visible)))
                        {
                            <div class="checkbox">
                                <label style="padding-left:0">
                                    @Html.RadioButtonFor(a => a.Visible, item.ToString())&nbsp;@Localizer[item.ToString()]
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">@Localizer["Close"]</button>
                    <input type="submit" class="btn btn-success  btn-sm" value="@(Model != null ? Localizer["Update"] : Localizer["Add"])" />
                </div>
            </div>
        </form>
    </div>
</div>
