@model DataListPartialModel

@inject IViewLocalizer Localizer


<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">@Localizer["Note List"]</h3>
                @if (Model.Member == Member.Owner || Model.Member == Member.Manager)
                {
                    <a class="btn btn-xs btn-success pull-right" data-type="modal" data-action="add-note?folderId=@Model.ID">
                        <i class="fa fa-file-text-o"></i>&nbsp;@Localizer["Add Note"]
                    </a>
                }
                
            </div>
            <div class="box-body table-responsive">
                <table class="table table-striped dataTable">
                    <thead class="table-header">
                        <tr>
                            <th>@Localizer["Name"]</th>
                            <th>@Localizer["State"]</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Script(
    @<script>
        var table = $(".dataTable").DataTable({
            "processing": true,
            "serverSide": true,
            "ordering": false,
            "ajax": {
                "url": "/folder-notes?folderId=@Model.ID",
                "type": "POST"
            },
            "columns": [
                { "data": "name" },
                { "data": "state" }
            ],
            "language": {
                "searchPlaceholder":"@Localizer["Search note name"]"
            }
        });
</script>
)

