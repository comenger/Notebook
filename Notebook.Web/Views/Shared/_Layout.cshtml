@using Microsoft.AspNetCore.Http.Extensions;

@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Notebook</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/adminlte/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="/adminlte/dist/css/skins/_all-skins.min.css">
    <!-- Jquery Datatable -->
    <link href="/adminlte/components/DataTables-1.10.18/css/datatables.min.css" rel="stylesheet" />
    <!-- Jquery Confirm -->
    <link href="/adminlte/components/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />

    <!-- Notebook style -->
    <link href="/notebook/cssJs/css/notebook.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cantarell:400,400italic,700italic,700">
</head>

@{
    TempData["BeforeUrl"] = Context.Request.GetDisplayUrl().ToString();
}

<body class="hold-transition skin-blue layout-top-nav">
    <div class="wrapper">
        @await Component.InvokeAsync("Header")

        
        <!-- Full Width Column -->
        <div class="content-wrapper">
            <div class="container" style="padding:15px">
                @RenderBody()
            </div>
            <!-- /.container -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <b>Version</b> 2.4.0
                </div>
                <strong>Copyright &copy; 2014-2016 <a href="https://adminlte.io">Almsaeed Studio</a>.</strong> All rights
                reserved.
            </div>
            <!-- /.container -->
        </footer>
        <div id="modalContent"></div>
    </div>
    

    @if (TempData["message"] != null)
    {
        await Html.RenderPartialAsync("~/Views/Shared/Plugins/Modal.cshtml", TempData["message"]);
    }
    <!-- jQuery 3 -->
    <script src="/adminlte/components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/adminlte/components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/adminlte/dist/js/adminlte.min.js"></script>
    <!-- Jquery Datatable -->
    <script src="/adminlte/components/DataTables-1.10.18/js/datatables.min.js"></script>
    <!-- Jquery Confirm -->
    <script src="/adminlte/components/jquery-confirm/jquery-confirm.min.js"></script>

    <!-- Notebook Js -->
    <script src="/notebook/cssJs/js/notebook.js"></script>
    <script src="/notebook/cssJs/js/ajaxFunctions.js"></script>

    <script>
        $.extend(true, $.fn.dataTable.defaults, {
            "language": {
                "lengthMenu":"@Localizer["Show"]: _MENU_",
                "decimal": "",
                "emptyTable": "@Localizer["No data available in table"]",
                "info": "@Localizer["Total"]: _TOTAL_ | @Localizer["Showing"]: _START_ - _END_",
                "infoEmpty": "@Localizer["Total"]: 0",
                "infoFiltered": "",
                "infoPostFix": "",
                "thousands": ",",
                "loadingRecords": "@Localizer["Loading"]...",
                "processing": "@Localizer["Processing"]...",
                "search":"",
                "searchPlaceholder": "@Localizer["Search"]",
                "searchDelay":500,
                "zeroRecords": "@Localizer["No matching records found"]",
                "paginate": {
                    "first": "@Localizer["First"]",
                    "last": "@Localizer["Last"]",
                    "next": "@Localizer["Next"]",
                    "previous": "@Localizer["Previous"]"
                },
                "aria": {
                    "sortAscending": ": activate to sort column ascending",
                    "sortDescending": ": activate to sort column descending"
                }
            }
        });
    </script>

    <scripts render="true"></scripts>

    @RenderSection("scripts", required: false)

    @Html.RenderScripts()
</body>
</html>
