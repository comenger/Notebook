                            <input type="text" class="form-control" placeholder="En az 5 karakter olmalı" value="@Model.Username" name="Username" required />
                        </div>
                        <div class="form-group">
                            <label>Yeni Şifre Belirle</label>
                            <input type="text" placeholder="En az 6 karakter olmalı" class="form-control" name="Password" />
                        </div>
