@model NoteDetailModel

@inject IViewLocalizer Localizer

@{
    var _user = Context.Session.GetSession<User>("User");
}

@if (Model != null)
{
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/profile/@Model.OwnerID/@Model.OwnerName.ClearHtmlTagAndCharacter()">@Model.OwnerName</a></li>
        <li class="active">@Model.Title</li>
    </ol>

    <div class="row">
        <div class="col-md-3">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <p class="text-center media-icon">N</p>

                    <h3 class="text-center box-title">@Model.Title</h3>

                    <p class="text-muted text-center">@Model.Explanation</p><br />
                    <ul class="list-group list-group-unbordered" style="color:#3D8CBC;">
                        <li class="list-group-item">
                            <i class="fa fa-user"></i>&nbsp;@Localizer["Autor"]
                            <a href="/profile/@Model.OwnerID/@Model.OwnerName.ClearHtmlTagAndCharacter()" class="pull-right" style="font-weight:bold; color:darkblue">@Model.OwnerName</a>
                        </li>
                        <li class="list-group-item">
                            <i class="fa fa-calendar"></i>&nbsp;@Localizer["Date"] <a class="pull-right">@Model.CreateDate.ToString("dddd, dd MMMM yyyy")</a>
                        </li>
                        <li class="list-group-item">
                            <i class="fa fa-file-text-o"></i>&nbsp;@Localizer["Read Count"] <a class="pull-right">@Model.ReadCount</a>
                        </li>
                        <li class="list-group-item">
                            <i class="fa fa-comment-o"></i>&nbsp;@Localizer["Comments"] <a class="pull-right">28</a>
                        </li>
                    </ul>
                    <div class="text-center">
                        @if (_user != null && Model.OwnerID == _user.ID)
                        {
                            <a data-type="modal" data-action="@Model.ID/edit-note" class="btn btn-primary"><b>@Localizer["Edit"]</b></a>
                            <a class="btn btn-danger" data-type="redirect" data-url="@TempData["BeforeUrl"]" data-method="post" data-action="@Model.ID/delete-note" data-confirm="@Localizer["Are you sure you want to delete"]?"><b>@Localizer["Remove"]</b></a>
                        }
                        else
                        {
                            <a href="#" class="btn btn-primary"><b>Add to favorites</b></a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="box">
                <div class="box-body">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">@Localizer["Note not found"]</div>
}